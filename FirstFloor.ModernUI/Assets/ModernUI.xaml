    <SolidColorBrush x:Key="AtlasTextBox.Pressed.Foreground" Color="#FFB2B2B2"/>
    <SolidColorBrush x:Key="AtlasTextBox.MouseOver.Foreground" Color="#FF4F4F4F"/>
    <SolidColorBrush x:Key="AtlasTextBox.MouseOver.BorderBrush" Color="#FF888888"/>

    <!-- SCROLL BAR -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#f3f2e9" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundDragging" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundHover" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollBarThumbBorder" Color="#FFC2C2C2" />
    <SolidColorBrush x:Key="ScrollBarThumbForeground" Color="#FFC2C2C2" />
    <SolidColorBrush x:Key="ScrollBarThumbForegroundDragging" Color="#d1d1d1" />
    <SolidColorBrush x:Key="ScrollBarThumbForegroundHover" Color="#919191" />

    <!-- GENERALS -->
    <!--<SolidColorBrush x:Key="Accent" Color="#e99501"/>-->
    <SolidColorBrush x:Key="PopupBackground" Color="#e4e4e4" />
    <SolidColorBrush x:Key="InputBackground" Color="#FFE2E2E2" />
    <SolidColorBrush x:Key="ShadowText" Color="#b3b3b3"/>

</ResourceDictionary>