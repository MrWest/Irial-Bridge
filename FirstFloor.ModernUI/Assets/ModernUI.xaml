    <sys:Double x:Key="AtlasTimelineGridTopHeaderText.Static.FontSize">14</sys:Double>

    <SolidColorBrush x:Key="AtlasTimelineScrollButton.Static.Background" Color="#FFD5D5D5" />
    <SolidColorBrush x:Key="AtlasTimelineScrollButton.Static.Foreground" Color="#FFA7A7A7" />
    <SolidColorBrush x:Key="AtlasTimelineScrollButton.MouseOver.Foreground" Color="#FF999999" />
    <SolidColorBrush x:Key="AtlasTimelineScrollButton.Pressed.Foreground" Color="#FF6E6E6E" />
    <SolidColorBrush x:Key="AtlasTimelineScrollButton.Disabled.Foreground" Color="#FFC1C1C1" />

    <SolidColorBrush x:Key="AtlasTimelineLifelineControl.Static.Background" Color="#FFDDDDDD"/>
