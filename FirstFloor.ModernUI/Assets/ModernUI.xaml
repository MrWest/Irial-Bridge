    <SolidColorBrush x:Key="Buttom.MouseOver.Foreground" Color="#0059b3"/>
    <SolidColorBrush x:Key="Buttom.Static.Foreground" Color="#FF6F6F6F"/>
    <SolidColorBrush x:Key="Buttom.Pressed.Foreground" Color="#e99501"/>
    <SolidColorBrush x:Key="AtlasContextButton.Static.Foreground" Color="#52a9ff"/>
    <SolidColorBrush x:Key="AtlasContextButton.Disabled.Foreground" Color="#FF6F6F6F"/>
    <!-- FILTER BOX -->
    <SolidColorBrush x:Key="FilterBoxSeparator.Stroke" Color="#727576"/>
    <SolidColorBrush x:Key="FilterBox.Background" Color="White"/>
    <SolidColorBrush x:Key="FilterBox.Foreground" Color="#FFBFBFBF"/>
    <SolidColorBrush x:Key="FilterBox.Disabled.Foreground" Color="#FF686868"/>
    <SolidColorBrush x:Key="FilterButton.Static.Foreground" Color="#FFC3C3C3"/>
    <SolidColorBrush x:Key="FilterButton.MouseOver.Foreground" Color="#FF636363"/>
    <SolidColorBrush x:Key="FilterButton.Pressed.Foreground" Color="#FFA2A2A2"/>
    <SolidColorBrush x:Key="FilterButton.Disabled.Foreground" Color="#FFDEDEDE"/>
    <SolidColorBrush x:Key="FilterClearButton.MouseOver.Foreground" Color="#FFEB7466"/>

    <!-- ATLAS TIMELINE -->
    <SolidColorBrush x:Key="AtlasTimelineCommandBar.Static.Border" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="AtlasTimelineCommandBar.Static.Background" Color="#FFD5D5D5"/>

    <SolidColorBrush x:Key="AtlasTimelineGrid.Static.Background" Color="#f3f2e9"/>

    <SolidColorBrush x:Key="AtlasTimelineGridHeader.Static.Border" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="AtlasTimelineGridHeader.Static.Foreground" Color="#ededed"/>
    <SolidColorBrush x:Key="AtlasTimelineGridHeader.Static.Background" Color="#9e9e9e"/>

    <SolidColorBrush x:Key="AtlasTimelineGridColumnBody.Static.Background" Color="#f3f2e9"/>
