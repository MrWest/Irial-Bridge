<UserControl x:Class="IriaBridge.Views.BridgeItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IriaBridge"
             xmlns:utils="clr-namespace:IriaBridge.Views.Utils"
             xmlns:properties="clr-namespace:IriaBridge.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow}, Path=ShowingItem}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="2">
            <TextBox Text="{Binding Name, Mode=TwoWay}" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
            <TextBox Text="{Binding Description, Mode=TwoWay}" TextWrapping="Wrap"  Margin="0,0,0,16"/>

        </StackPanel>
        <StackPanel>
            <TextBlock Text="{Loc Preview Image}" />
            <Image Source="{Binding PreviewImage}" />
        </StackPanel>

    </Grid>
</UserControl>
